{
  "version": "0.0.1",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/components/*",
    "packages/core/*",
    "packages/designs/*",
    "packages/elements/*",
    "packages/forms/*",
    "packages/helpers/*",
    "packages/layouts/*"
  ]
}
